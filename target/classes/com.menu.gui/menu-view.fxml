<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="com.menu.gui.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox alignment="CENTER" spacing="10">
    <HBox alignment="CENTER" spacing="2">
        <Label text="Filter" />
        <TextField fx:id="Filter" HBox.hgrow="ALWAYS" />
    </HBox>
    <ListView>
        <Label text="Nota 1" />
        <Label text="Nota 2" />
        <Label text="Nota 3" />
    </ListView>
    <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <Button maxWidth="1.7976931348623157E308" onAction="#onAddButtonClick" text="Add" HBox.hgrow="ALWAYS" />
        <Button maxWidth="1.7976931348623157E308" onAction="#onDelButtonClick" prefHeight="27.0" prefWidth="47.0" text="Del" HBox.hgrow="ALWAYS" />
    </HBox>
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="10">
    <HBox alignment="CENTER" spacing="2">
        <Label text="Title" />
        <TextField fx:id="Title" prefHeight="27.0" prefWidth="187.0" HBox.hgrow="ALWAYS" />
    </HBox>
    <Label text="Text" />
    <TextArea fx:id="Text" maxHeight="1.7976931348623157E308" prefHeight="348.0" prefWidth="290.0" />
    <Button maxWidth="1.7976931348623157E308" onAction="#onSaveButtonClick" text="Save" VBox.vgrow="ALWAYS" />
        <Label fx:id="actionResult" />
    </VBox>
</HBox>
